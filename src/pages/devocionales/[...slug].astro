---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPostEs.astro';

export async function getStaticPaths() {
	const devocionales = await getCollection('devocionales');
	return devocionales.map((devocional) => ({
		params: { slug: devocional.slug },
		props: devocional,
	}));
}
type Props = CollectionEntry<'devocionales'>;

const devocional = Astro.props;
const { Content } = await devocional.render();
---

<BlogPost {...devocional.data}>
	<Content />
</BlogPost>
